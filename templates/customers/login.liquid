
<div class="page-container py-16">
  <div class="max-w-md mx-auto">
    <h1 class="text-4xl font-bold font-gelatico mb-6 text-center">Login</h1>
    
    <div class="bg-white p-6 rounded-lg shadow-sm">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded mb-4">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
      
        <div class="mb-4">
          <label for="customer_email" class="block text-sm font-medium mb-1">Email</label>
          <input 
            type="email" 
            name="customer[email]" 
            id="customer_email"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-gelatico-pink"
            autocomplete="email"
            autofocus
          >
        </div>
        
        <div class="mb-4">
          <label for="customer_password" class="block text-sm font-medium mb-1">Password</label>
          <input 
            type="password" 
            name="customer[password]" 
            id="customer_password"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-gelatico-pink"
            autocomplete="current-password"
          >
        </div>
        
        <div class="flex items-center justify-between mb-6">
          <div>
            <a href="#recover" class="text-sm text-gelatico-pink hover:underline">Forgot your password?</a>
          </div>
        </div>
        
        <button type="submit" class="gelatico-button w-full">Sign in</button>
      {% endform %}
      
      <div class="mt-4 text-center">
        <p>Don't have an account? <a href="{{ routes.account_register_url }}" class="text-gelatico-pink hover:underline">Create one</a></p>
      </div>
    </div>
  </div>
</div>
