
<div class="page-container py-16">
  <h1 class="text-4xl font-bold font-gelatico mb-6">My Account</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="md:col-span-2">
      <div class="bg-white p-6 rounded-lg shadow-sm">
        <h2 class="text-2xl font-bold mb-4">Order History</h2>
        
        {% if customer.orders.size > 0 %}
          <div class="space-y-6">
            {% for order in customer.orders %}
              <div class="border rounded-lg p-4">
                <div class="flex justify-between mb-2">
                  <span class="font-medium">Order #{{ order.name }}</span>
                  <span class="text-muted-foreground">{{ order.created_at | date: "%b %d, %Y" }}</span>
                </div>
                <div class="flex justify-between mb-2">
                  <span>{{ order.fulfillment_status_label }}</span>
                  <span class="font-medium">{{ order.total_price | money }}</span>
                </div>
                <a href="{{ order.customer_url }}" class="gelatico-button-outline text-sm py-1 px-4 mt-2">View Order</a>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <p>You haven't placed any orders yet.</p>
        {% endif %}
      </div>
    </div>
    
    <div>
      <div class="bg-white p-6 rounded-lg shadow-sm mb-6">
        <h2 class="text-xl font-bold mb-4">Account Details</h2>
        <p><strong>Name:</strong> {{ customer.name }}</p>
        <p><strong>Email:</strong> {{ customer.email }}</p>
        <div class="mt-4">
          <a href="/account/addresses" class="text-gelatico-pink hover:underline">Manage Addresses</a>
        </div>
      </div>
      
      <div class="mt-4">
        <a href="{{ routes.account_logout_url }}" class="gelatico-button-outline w-full text-center">Log out</a>
      </div>
    </div>
  </div>
</div>
