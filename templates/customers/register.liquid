
<div class="page-container py-16">
  <div class="max-w-md mx-auto">
    <h1 class="text-4xl font-bold font-gelatico mb-6 text-center">Create Account</h1>
    
    <div class="bg-white p-6 rounded-lg shadow-sm">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded mb-4">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
      
        <div class="mb-4">
          <label for="first_name" class="block text-sm font-medium mb-1">First Name</label>
          <input 
            type="text" 
            name="customer[first_name]" 
            id="first_name"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-gelatico-pink"
            autocomplete="given-name"
            autofocus
          >
        </div>
        
        <div class="mb-4">
          <label for="last_name" class="block text-sm font-medium mb-1">Last Name</label>
          <input 
            type="text" 
            name="customer[last_name]" 
            id="last_name"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-gelatico-pink"
            autocomplete="family-name"
          >
        </div>
        
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium mb-1">Email</label>
          <input 
            type="email" 
            name="customer[email]" 
            id="email"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-gelatico-pink"
            autocomplete="email"
          >
        </div>
        
        <div class="mb-4">
          <label for="password" class="block text-sm font-medium mb-1">Password</label>
          <input 
            type="password" 
            name="customer[password]" 
            id="password"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-gelatico-pink"
            autocomplete="new-password"
          >
        </div>
        
        <button type="submit" class="gelatico-button w-full">Create Account</button>
      {% endform %}
      
      <div class="mt-4 text-center">
        <p>Already have an account? <a href="{{ routes.account_login_url }}" class="text-gelatico-pink hover:underline">Log in</a></p>
      </div>
    </div>
  </div>
</div>
