
<section class="py-16 md:py-24 bg-gelatico-peach-cream/50">
  <div class="page-container">
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1 mb-4 rounded-full bg-gelatico-baby-pink/30 text-gelatico-pink text-sm font-medium uppercase tracking-wider">
        {{ section.settings.highlight_text }}
      </span>
      <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold font-gelatico mb-6">
        {{ section.settings.title }}
      </h2>
      <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
        {{ section.settings.description }}
      </p>
    </div>
    
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          <a 
            href="{{ block.settings.link }}" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="relative group overflow-hidden rounded-lg aspect-square"
          >
            <img 
              src="{{ block.settings.image | img_url: 'medium' }}" 
              alt="{{ block.settings.image.alt }}" 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            >
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center p-4">
              <p class="text-white text-sm font-medium truncate">{{ block.settings.caption }}</p>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="{{ section.settings.instagram_url }}" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="gelatico-button"
      >
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Instagram Feed",
  "tag": "section",
  "class": "instagram-feed-section",
  "settings": [
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Highlight Text",
      "default": "Social Media"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Follow Us on Instagram"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Share your Gelatico moments with us using #GelaticoBites"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL",
      "default": "https://www.instagram.com/gelatico.kw"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Follow Us @gelatico.kw"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Gelatico Love"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
